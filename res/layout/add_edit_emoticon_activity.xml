<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    >
    
    <LinearLayout
        style="@style/addEditEmoticonLinearLayoutStyle"
        android:layout_height="wrap_content"
        >
	    <TextView
	        android:id="@+id/descriptionAddEditEmoticonTextView"
	        style="@style/addEditEmoticonTextViewStyle"
	        android:text="@string/add_emoticon_description_text_view"
	        />
	    
	   	<EditText 
	        android:id="@+id/descriptionAddEditEmoticonEditText"
	        style="@style/addEditEmoticonEditText"
	        android:layout_height="wrap_content"
	        android:inputType="text"
	        />
    </LinearLayout>
    
    <LinearLayout 
        style="@style/addEditEmoticonLinearLayoutStyle"
        android:layout_height="0dp"
        android:layout_weight="2" 
        >
	    <TextView
	        android:id="@+id/contentAddEditEmoticonTextView"
	        style="@style/addEditEmoticonTextViewStyle"
	        android:text="@string/add_emoticon_content_text_view"
	        />
	    
	    <EditText 
	        android:id="@+id/contentAddEditEmoticonEditText"
	        style="@style/addEditEmoticonEditText"
	        android:layout_height="fill_parent"
	        android:inputType="textMultiLine"
	        android:gravity="top"
	        />
    </LinearLayout>
    
    <Button
        android:id="@+id/addEditEmoticonButton"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3" 
        android:text=""
        />


</LinearLayout>